# Application
APP_NAME=AI Resume Analyzer
APP_VERSION=1.0.0
DEBUG=false
SECRET_KEY=generate-a-long-random-secret-key-for-production

# Database
# Production URL: postgresql+asyncpg://user:pass@db:5432/dbname
DATABASE_URL=postgresql+asyncpg://resume_user:resume_pass@db:5432/resume_db
DATABASE_SYNC_URL=postgresql://resume_user:resume_pass@db:5432/resume_db

# File Storage
UPLOAD_DIR=/data/uploads
MAX_FILE_SIZE_MB=10

# ML Models
SENTENCE_TRANSFORMER_MODEL=sentence-transformers/all-MiniLM-L6-v2
SPACY_MODEL=en_core_web_sm

# Embedding
EMBEDDING_MAX_TOKENS=512

# CORS (comma-separated origins)
# Example: https://resume.yourdomain.com
CORS_ORIGINS=http://localhost:5173

# Postgres (for docker-compose)
POSTGRES_USER=resume_user
POSTGRES_PASSWORD=resume_pass
POSTGRES_DB=resume_db

